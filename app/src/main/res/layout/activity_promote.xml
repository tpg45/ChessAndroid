<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tim.chess.PromoteActivity">

    <ImageView
        android:id="@+id/b"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginRight="0dp"
        android:onClick="bishop"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/bishopblack"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/k" />

    <ImageView
        android:id="@+id/q"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="-7dp"
        android:layout_marginTop="100dp"
        android:onClick="queen"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/queenblack" />

    <ImageView
        android:id="@+id/k"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:onClick="knight"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/knightblack"
        tools:layout_editor_absoluteY="100dp" />

    <ImageView
        android:id="@+id/r"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:onClick="rook"
        app:srcCompat="@drawable/rookblack"
        tools:layout_editor_absoluteX="0dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/q" />
</android.support.constraint.ConstraintLayout>
