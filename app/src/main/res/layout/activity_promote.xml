<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:launchMode="singleTask"
    tools:context="com.example.tim.chess.PromoteActivity">

    <ImageView
        android:id="@+id/b"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginRight="0dp"
        android:onClick="bishop"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/bishopblack"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/k" />

    <ImageView
        android:id="@+id/q"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="8dp"
        android:onClick="queen"
        app:layout_constraintLeft_toLeftOf="parent"
        app:srcCompat="@drawable/queenblack"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <ImageView
        android:id="@+id/k"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:onClick="knight"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/knightblack"
        app:layout_constraintTop_toTopOf="@+id/q"
        android:layout_marginTop="8dp" />

    <ImageView
        android:id="@+id/r"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:onClick="rook"
        app:srcCompat="@drawable/rookblack"
        tools:layout_editor_absoluteX="0dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/q" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:text="Pick a promotion:"
        android:textSize="32sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="54dp" />
</android.support.constraint.ConstraintLayout>
